<Window x:Class="TradeMonitorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trade File Monitor"
        Height="600" Width="1000"
        Background="#FF1E1E1E"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#FF2C2C2C" Padding="12" CornerRadius="8">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="📂 Trade File Monitor"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
                <TextBlock Text="   |   Monitoring active..."
                           Foreground="#FFC9C9C9"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="5,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Data Grid -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding TradeDataList}"
                  AutoGenerateColumns="False"
                  Margin="0,15,0,15"
                  Background="#FF2C2C2C"
                  Foreground="White"
                  AlternatingRowBackground="#FF333333"
                  HeadersVisibility="All"
                  RowHeight="28"
                  FontSize="13"
                  BorderThickness="0"
                  GridLinesVisibility="None">

            <!-- Header Style -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FF1A1A1A"/>
                    <Setter Property="Foreground" Value="#FFECECEC"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="BorderBrush" Value="#FF3A3A3A"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*" />
                <DataGridTextColumn Header="Open" Binding="{Binding Open}" Width="*" />
                <DataGridTextColumn Header="High" Binding="{Binding High}" Width="*" />
                <DataGridTextColumn Header="Low" Binding="{Binding Low}" Width="*" />
                <DataGridTextColumn Header="Close" Binding="{Binding Close}" Width="*" />
                <DataGridTextColumn Header="Volume" Binding="{Binding Volume}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#FF2C2C2C" Padding="10" CornerRadius="8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Last Checked: " Foreground="#FFC9C9C9" FontSize="13"/>
                <TextBlock Text="{Binding LastCheckedTime}" Foreground="White" FontWeight="Bold" FontSize="13"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
